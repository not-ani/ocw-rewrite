{
  "name": "ocw-rewrite",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "tooling/*"
    ],
    "catalog": {
      "convex": "^1.27.0",
      "@types/node": "^20",
      "typescript": "^5"
    }
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "typecheck": "turbo run typecheck",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @ocw/backend dev",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "test:e2e": "turbo -F web test:e2e",
    "test:e2e:ui": "turbo -F web test:e2e:ui",
    "test:e2e:headed": "turbo -F web test:e2e:headed",
    "test:e2e:debug": "turbo -F web test:e2e:debug",
    "test:e2e:report": "turbo -F web test:e2e:report",
    "test:e2e:install": "turbo -F web test:e2e:install",
    "dev:setup": "turbo -F @ocw/backend dev:setup",
    "test:backend": "turbo -F @ocw/backend test",
    "test:backend:watch": "turbo -F @ocw/backend test:watch",
    "test:backend:coverage": "turbo -F @ocw/backend test:coverage"
  },
  "dependencies": {},
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "^2.2.0"
  },
  "packageManager": "pnpm@10.11.0",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ],
      "allowedVersions": {
        "react": "19",
        "react-dom": "19"
      }
    }
  },
  "overrides": {
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2"
  }
}
