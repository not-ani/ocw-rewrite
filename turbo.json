{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**", "pkg/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"dev:setup": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"cache": false
		},
		"test:watch": {
			"cache": false,
			"persistent": true
		},
		"test:coverage": {
			"cache": false
		},
		"test:e2e": {
			"cache": false,
			"inputs": ["$TURBO_DEFAULT$", "e2e/**", "playwright.config.ts"]
		},
		"test:e2e:ui": {
			"cache": false,
			"persistent": true
		},
		"test:e2e:headed": {
			"cache": false
		},
		"test:e2e:debug": {
			"cache": false,
			"persistent": true
		},
		"test:e2e:report": {
			"cache": false
		},
		"test:e2e:install": {
			"cache": false
		}
	}
}
